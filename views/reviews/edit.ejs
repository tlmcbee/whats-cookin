<%- include('../partials/header') %>
<section class="section-color-pack">
<form id="edit-review-form" action="/reviews/<%= review._id %>?_method=PUT" method="POST">
  <label class="enbolden">Review:</label>
  <textarea name="content"><%= review.content %></textarea>
  <label class="enbolden">Did you make this</label>
  <select name="made" value="<%= review.made %>">
    <option value="YES">YES</option>
    <option value="NO">NO</option>
  </select>
  <label class="enbolden">Rating:</label>
  <select name="rating" value="<%= review.rating %>">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5" selected>5</option>
  </select>
  <input type="submit" value="Edit Review">
  </form>
</section>
  
<%- include('../partials/footer') %>